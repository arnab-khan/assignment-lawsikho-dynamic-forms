        "sequence": 4,
        "validation": {
            "mandatory": {
                "value": true,
                "errorMessage": "Name is required"
            },
            "pattern": {
                "value": "^[a-zA-Z\\s]{2,50}$",
                "errorMessage": "Name must be between 2 and 50 characters and contain only letters and spaces"
            }
        }
    },
    {
        "label": "Confirm Password",
